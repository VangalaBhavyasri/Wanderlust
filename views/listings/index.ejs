        <div class="tax-toggle icon icon5">
          <div class="form-check-reverse form-switch form-div">
            <pre class="label-part"><label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label></pre>
            <pre class="label-part2"><input class="form-check-input me-2" type="checkbox" role="switch" id="flexSwitchCheckDefault"></pre> 
          </div>
        </div>
        <div class="filter arrow-container">
          <span class="arrow" id="right-arrow">&gt;</span> 
        </div>
        <div class="filter arrow-container2">
          <span class="arrow2" id="right-arrow2">&gt;</span> 
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(listing of allListings){ %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col border-0" listing-card >
        <img src=<%=listing.image.url%> class="card-img-top" alt="...">
        <div class="card-img-overlay img-eff"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b>
            <br>
            &#8377;<%= listing.price.toLocaleString("en-IN")%>/Day
            <i class="tax-info">&nbsp;&nbsp;+18%GST</i>
          </p>
        </div>
        </div>
      </a>
      <%}%>
    </div>
